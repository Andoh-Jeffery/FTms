                      </ul>
                    </li>
                  </ul>
                </li> -->
                    </ul>
                </li>
            </ul>
        </div>
    </div>

    <!-- Page Content -->
    <div style="margin-left:20%">

        <div class="w3-container w3-teasl" style="background-color: #ed502e;color: #fff;">
            <h1>
                FasTeck <%= title %>

                <a href="/logout"> <span class="btn-logout">log out</span></a>
            </h1>

        </div>
        <div class="w3-container">

            <div class="content table-responsive">

                <h3 style="margin-left: 35%;" class="title">Members</h3>

                <table class="table table-hover">
                    <tr>
                        <th>Username</th>
                        <th>Phone Number</th>
                        <th>Program</th>
                        <th>status</th>
                        <th>payment Made</th>
                        <th>Action</th>
                    </tr>
                    <% userData.forEach(user=>{%>
                    <tr>
                        <td><%= user.firstname +" " +user.lastname%></td>
                        <td><%= user.phone %></td>
                        <td><%= user.programOfChoice%></td>
                        <td><%=user.status%></td>
                        <td><%=user.paymentMade%></td>
                        <td>
                            <a class="icons" href="/update"><i class="fas fa-pencil-alt"></i></a>
                        </td>
                    </tr>
                    <%})%>
                </table>
            </div>

        </div>
    </div>
    <div class="expenses content w3-container " style="margin-left:20%;">
        <h3 class="title " style="margin-left:48%">Expenses</h3>
        <table class="table table-hover">
            <tr>
                <th>title</th>
                <th>description</th>
                <th>Cost <span>&#8373;</span></th>
            </tr>
            <tr>
                <td>Projector</td>
                <td>took projector from kbk and friends</td>
                <td>45</td>
            </tr>
        </table>
    </div>
    <script>
        var toggler = document.getElementsByClassName("caret");
        var i;

        for (i = 0; i < toggler.length; i++) {
            toggler[i].addEventListener("click", function () {
                this.parentElement.querySelector(".nested").classList.toggle("active");
                this.classList.toggle("caret-down");
            });
        }
    </script>
</body>

</html>